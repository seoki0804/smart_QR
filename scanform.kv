<ScanForm>:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    Label:
        id: status_label
        text: "QR 스캔을 시작하려면 아래 버튼을 누르세요."
        size_hint_y: None
        height: 40

    Button:
        text: "QR 코드 스캔 시작"
        size_hint_y: None
        height: 50
        on_press: root.start_scan()

    Label:
        id: result_label
        text: ""
        size_hint_y: None
        height: 200
        text_size: self.width, None
        halign: "left"
        valign: "top"

