<ScanForm>:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    Label:
        id: status_label
        text: "QR 스캔을 시작하려면 아래 버튼을 누르세요."
        size_hint_y: None
        height: 40

    Button:
        text: "QR 코드 스캔 시작"
        size_hint_y: None
        height: 50
        on_press: root.start_scan()

    Label:
        id: result_label
        text: ""
        size_hint_y: None
        height: 100
        text_size: self.width, None
        halign: "left"
        valign: "top"

    BoxLayout:
        size_hint_y: None
        height: 40
        spacing: 10

        TextInput:
            id: intake_input
            hint_text: "수급량"
            input_filter: 'int'

        TextInput:
            id: usage_input
            hint_text: "소모량"
            input_filter: 'int'

        TextInput:
            id: request_input
            hint_text: "청구량"
            input_filter: 'int'

    TextInput:
        id: memo_input
        hint_text: "메모 입력 (선택)"
        size_hint_y: None
        height: 40

    Button:
        text: "입력값 저장하기"
        size_hint_y: None
        height: 50
        on_press: root.save_transaction()